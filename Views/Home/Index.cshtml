@{
    ViewData["Title"] = "Home Page";
}

<h2>Riconoscimento immagini</h2>
<form method="post" enctype="multipart/form-data" asp-action="AnalyzeImage">
    <div class="form-group">
        <div class="col-md-10">
            <p>Scegli il file da analizzare:</p>
            <input type="file" name="image" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>